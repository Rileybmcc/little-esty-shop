<h1> Discounts </h1>
<%= link_to 'Create a new discount', new_merchant_discount_path(@merchant)%>
<h3> Upcoming Holidays </h3>
<% @next_holidays.each do |holiday| %>
  <p> <%= holiday.name %> <%= holiday.date %> </p>
<% end %>
<table>
  <tr>
    <th> Name </th>
    <th> Discount </th>
    <th> Threshold </th>
  </tr>
  <% @merchant.discounts.each do |discount| %>
  <tr id="discount-<%=discount.id%>"> 
    <th> <%= link_to "#{discount.name}", merchant_discount_path(@merchant, discount)%>  </th>
    <th> <%= discount.percentage * 100 %>% </th>
    <th> <%= discount.threshold %> </th>
    <th> <%= button_to 'Delete', merchant_discount_path(@merchant, discount), method: :delete%>
  </tr>
  <% end %>
</table>